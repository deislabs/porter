{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "config": {
      "additionalProperties": false,
      "properties": {
        "exec": {
          "anyOf": [
            {
              "$comment": "The exec mixin does not currently support any additional configuration",
              "enum": [
                "exec"
              ]
            }
          ]
        }
      },
      "required": [
        "exec"
      ],
      "type": "string"
    },
    "installStep": {
      "type": "object",
      "properties": {
        "exec": {"$ref": "#/definitions/exec"}
      },
      "additionalProperties": false,
      "required": [
        "exec"
      ]
    },
    "upgradeStep": {
      "type": "object",
      "properties": {
        "exec": {"$ref": "#/definitions/exec"}
      },
      "additionalProperties": false,
      "required": [
        "exec"
      ]
    },
    "invokeStep": {
      "type": "object",
      "properties": {
        "exec": {"$ref": "#/definitions/exec"}
      },
      "additionalProperties": false,
      "required": [
        "exec"
      ]
    },
    "uninstallStep": {
      "type": "object",
      "properties": {
        "exec": {"$ref": "#/definitions/exec"}
      },
      "additionalProperties": false,
      "required": [
        "exec"
      ]
    },
    "exec": {
      "description": "A step that is executed by the exec mixin",
      "type": "object",
      "properties": {
        "description": {
          "description": "A description of the mixin step",
          "type": "string"
        },
        "command": {
          "description": "The name of the command to run",
          "type": "string"
        },
        "dir": {
          "description": "The directory in which to execute the command",
          "type": "string"
        },
        "arguments": {
          "description": "Positional arguments to pass to the command before any flags",
          "type": "array",
          "items": {
            "type": "string",
            "minItems": 1
          }
        },
        "flags": {
          "description": "Flags to pass to the command",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "suffix-arguments": {
          "description": "Positional arguments to pass to the command after any flags",
          "type": "array",
          "items": {
            "type": "string",
            "minItems": 1
          }
        },
        "suppress-output": {
          "description": "Do not print output from the command",
          "type": "boolean"
        },
        "outputs": {
          "description": "List of outputs to capture from the command output",
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "description": "The output name",
                "type": "string"
              },
              "jsonPath": {
                "description": "A json path expression that should be executed against the command's stdout to use as the output value",
                "type": "string"
              },
              "regex": {
                "description": "A regular expression that should be executed against the command's stdout to use as the output value",
                "type": "string"
              },
              "path": {
                "description": "A path to a file that was generated by the command to use as the output value",
                "type": "string"
              }
            },
            "additionalProperties": false,
            "required": [
              "name"
            ],
            "oneOf": [
              { "required": [ "jsonPath" ] },
              { "required": [ "regex" ] },
              { "required": [ "path" ] }
            ]
          }
        }
      },
      "additionalProperties": false,
      "required": [
        "command"
      ]
    }
  },
  "type": "object",
  "properties": {
    "install": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/installStep"
      }
    },
    "upgrade": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/upgradeStep"
      }
    },
    "uninstall": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/uninstallStep"
      }
    },
    "config": {"$ref": "#/definitions/config"}
  },
  "additionalProperties": {
    "type": "array",
    "items": {
      "$ref": "#/definitions/invokeStep"
    }
  }
}
